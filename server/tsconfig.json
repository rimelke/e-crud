{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["./src/core/entities/*"],
      "@repositories/*": ["./src/core/repositories/*"],
      "@useCases/*": ["./src/core/useCases/*"],
      "@providers/*": ["./src/core/providers/*"],
      "@validators/*": ["./src/core/validation/validators/*"],
      "@lib/*": ["./src/infra/lib/*"],
      "@jobs/*": ["./src/infra/jobs/*"],
      "@infra/*": ["./src/infra/*"],
      "@controllers/*": ["./src/interface/controllers/*"],
      "@adapters/*": ["./src/interface/adapters/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
